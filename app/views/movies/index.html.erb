<h1>Latest Movies</h1>

<%= form_tag(movies_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search], placeholder: 'Search by title') %>
  <%= submit_tag('Search') %>
<% end %>

<ul>
  <% @movies.each do |movie| %>
    <li>
       <%= link_to movie['title'], movie_path(movie['id']) %>
       <%= link_to movie_path(movie['id']) do %>
         <%= image_tag("https://image.tmdb.org/t/p/w200#{movie['poster_path']}", alt: 'Movie Poster') %>
       <% end %>
      <%= link_to 'Add to Favorites', favorites_movies_path(movie_id: movie['id']), method: :post %>
    </li>
  <% end %>
</ul>
